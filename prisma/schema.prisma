generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:WTFIS0124@localhost:3306/pino-nest"
}

model User {
  id                           Int      @id @default(autoincrement())
  referrer_id                  Int?
  referral_code                String   @unique
  // Telegram fields
  telegram_id                  Int      @unique
  telegram_username            String?
  telegram_firstname           String?
  telegram_lastname            String?
  // Cricket game fields
  cricket_balance              Float    @default(0)
  this_match_apple_earning     Float    @default(0)
  previous_match_apple_earning Float    @default(0)
  // Referral system fields
  direct_referral_count        Int      @default(0)
  downline_referral_count      Int      @default(0)
  pets                         Json?
  referral_modal_watched       Boolean? @default(false) @map("closed_golden_modal")
  // Idle game fields
  apple_balance                Float    @default(0)
  apple_per_second             Float    @default(0)
  // Timestamps
  last_heartbeat               DateTime
  created_at                   DateTime @default(now())
  updated_at                   DateTime @updatedAt

  referrals    Referral[]     @relation("referrer")
  referred     Referral[]     @relation("referred")
  userBusiness UserBusiness[]
}

model Referral {
  id          Int      @id @default(autoincrement())
  referrer_id Int
  referred_id Int
  telegram_id Int
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @default(now()) @map("updated_at")
  referrer    User     @relation("referrer", fields: [referrer_id], references: [id])
  referred    User     @relation("referred", fields: [referred_id], references: [id])
}

model UserBusiness {
  id          Int  @id @default(autoincrement())
  user_id     Int
  business_id Int
  level       Int  @default(1)
  user        User @relation(fields: [user_id], references: [id])

  @@unique([user_id, business_id])
}
